            // Hi·ªÉn th·ªã section ƒë∆∞·ª£c ch·ªçn
            document.getElementById(sectionId).classList.add('active');
            // Th√™m class active cho m·ª•c ƒë∆∞·ª£c ch·ªçn trong sidebar
            document.querySelector(`.sidebar a[href="#${sectionId}"]`).parentElement.classList.add('active');
        }

        function getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
            return null;
        }

        // Ki·ªÉm tra cookie error
        const error = getCookie('error');
        if (error) {
            const errorMessage = document.getElementById('error-message');
            errorMessage.style.display = 'block';
            errorMessage.textContent = error;
            document.cookie = 'error=; Max-Age=0; path=/';
            setTimeout(() => {
                errorMessage.style.display = 'none';
            }, 5000);
        }

        // Ki·ªÉm tra cookie success
